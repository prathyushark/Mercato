<script type="text/javascript">
  $(document).ready(function()
  {
      MERCATO.Customer.ProductPage.productPrice = <%= @product['price'] %>;
      MERCATO.Customer.ProductPage.productQuantity = <%= @product['quantity'] %>;
      MERCATO.Customer.ProductPage.productId = "<%=@product['product_id']%>";
      var str = $("#aCartBtn").text().trim();
      MERCATO.Customer.ProductPage.cartCount = parseInt(str.substring(str.indexOf('(')+1, str.indexOf(')')));
      MERCATO.Customer.ProductPage.availability();
  });
</script>



<div class="section" id="divHeaderSection">
  <div class="row">
    <div class="col s3" style="padding:50px;" >
      <div class="row">
        <div class="col s12" style="padding: 0">
          <img class="hoverable z-depth-1" style="width: 100%" src="http://localhost:8888/assets/<%= @product['product_id']%>.jpg">
        </div>
      </div>
      <div class="row">
        <div class="col s12 cart-product-price z-depth-1 hoverable" style="font-size:20px;text-align:center; height:50px;padding:2%">
          <div>Price: $<%= (@product['price']).round(2) %></div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 cart-product-price z-depth-1 hoverable" id="availabilityDiv" style="font-size:20px; height:50px;text-align:center;padding:2%" >
          <div><%= @product['quantity'] %></div>
        </div>
      </div>
    </div>

    <div class="col s5" style="padding:50px">
      <div class="row">
        <div class="col s12" id="divProductTableHeading" style="color:DarkBlue">
          <%= @product['product_name']%>
        </div>
      </div>
      <div class="row">
        <div class="col s12 cart-product-price z-depth-1 hoverable" style="height:300px;width:100%;overflow:auto;padding:2%" >
          <p style="font-size: 15px" class="flow-text"><%= @product['product_description']%></p>
        </div>
      </div>
      <div class="row">
      </div>
    </div>
    <div class="col s3  z-depth-1 hoverable" style="padding:50px; margin-top: 50px">
      <div class="row">
        <div class="cart-product-price" style="padding:20px">Quantity:
          <select id="prdQty" onchange="MERCATO.Customer.ProductPage.quantityChange(this)">
            <% (1..[9, @product['quantity']].min).each do |i| %>
              <option value="<%= i %>"><%= i %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div id="totalPriceDiv" style="padding-bottom:20px"> Total price: $<%= @product['price'] %> </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button class="waves-effect waves-light btn <%= 'disabled' if @product['quantity'] < 1 %>" id="addToCartButton" style="width: 100%" onclick="MERCATO.Customer.ProductPage.addProductToCart()"> Add to Cart </button>
        </div>
      </div>
    </div>
  </div>
</div>